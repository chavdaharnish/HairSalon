<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:focusableInTouchMode="true"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="VectorDrawableCompat"
    tools:context=".ImageUploadAct">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bgHeaderStart"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/header"
        android:contentDescription="header" />

    <Button
        android:layout_marginTop="35dp"
        android:id="@+id/button_choose_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose file" />

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/edit_text_file_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/button_choose_image"
        android:hint="Hair Style Name" />

    <EditText
        android:layout_marginTop="60dp"
        android:id="@+id/hairstylePrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/button_choose_image"
        android:hint="Hair Style Price" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="370dp"
        android:layout_height="345dp"
        android:layout_below="@+id/hairstylePrice"
        android:layout_marginStart="20dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="300dp"
        android:layout_marginStart="40dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/image_view"/>

    <Button
        android:id="@+id/button_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:layout_centerHorizontal="true"
        android:text="Upload" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/bgHeaderEnd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="header"
        android:layout_marginTop="530dp"
        android:background="@drawable/bgheaderend"/>


</RelativeLayout>